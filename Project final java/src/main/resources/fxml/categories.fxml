<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import java.lang.String?>

<!-- Vue gestion categories -->
<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.inventory.controller.CategoryController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <top>
        <Label text="Gestion des Catégories">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>
    </top>

    <center>
        <!-- Tableau categories -->
        <TableView fx:id="categoryTable" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="50.0" />
                <TableColumn fx:id="colName" text="Nom" prefWidth="250.0" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>
    
    <right>
        <VBox fx:id="actionPanel" spacing="10.0" alignment="TOP_CENTER" prefWidth="250.0" style="-fx-padding: 10; -fx-background-color: #f4f4f4;">
            <Label text="Gestion Catégories" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
            <Separator/>
            
            <javafx.scene.control.TextField fx:id="nameField" promptText="Nom de la catégorie"/>
            
            <Button fx:id="btnAdd" text="Ajouter" maxWidth="Infinity" onAction="#handleAddCategory">
                 <styleClass>
                    <String fx:value="button-success"/>
                </styleClass>
            </Button>
            
            <Button fx:id="btnUpdate" text="Mettre à jour" maxWidth="Infinity" onAction="#handleUpdateCategory">
                 <styleClass>
                    <String fx:value="button-info"/>
                </styleClass>
            </Button>
            
            <javafx.scene.control.Separator/>
            
            <Button fx:id="btnDelete" text="Supprimer Sélection" maxWidth="Infinity" onAction="#handleDeleteCategory">
                 <styleClass>
                    <String fx:value="button-danger"/>
                </styleClass>
            </Button>
            
             <Label fx:id="errorLabel" textFill="RED" wrapText="true"/>
        </VBox>
    </right>
</BorderPane>
