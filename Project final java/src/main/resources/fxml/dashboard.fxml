<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import java.lang.String?>


<!-- Layout principal -->
<BorderPane fx:id="mainLayout" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.inventory.controller.DashboardController">
    
    <left>
        <!-- Menu lateral -->
        <VBox spacing="10.0" styleClass="sidebar">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            
            <Label text="Menu" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="18.0" />
                </font>
            </Label>
            
            <Button text="Produits" maxWidth="Infinity" onAction="#showProducts">
                <styleClass>
                    <String fx:value="sidebar-button"/>
                </styleClass>
            </Button>
            
            <Button fx:id="btnCategories" text="Catégories" maxWidth="Infinity" onAction="#showCategories">
                <styleClass>
                    <String fx:value="sidebar-button"/>
                </styleClass>
            </Button>
            
            <Button text="Déconnexion" maxWidth="Infinity" onAction="#handleLogout">
                 <styleClass>
                    <String fx:value="sidebar-button"/>
                    <String fx:value="logout-button"/>
                </styleClass>
            </Button>
        </VBox>
    </left>

    <center>
        <!-- Zone contenu -->
        <VBox fx:id="contentArea" alignment="CENTER" spacing="20.0">
             <Label fx:id="welcomeLabel" text="Bienvenue !">
                <font>
                    <Font size="24.0" />
                </font>
             </Label>
             <Label text="Sélectionnez une option dans le menu." textFill="GRAY"/>
        </VBox>
    </center>

</BorderPane>
